import React, { useState } from 'react';
import LoginPage from './components/LoginPage';
// Импортируйте другие компоненты по мере необходимости, например, RegisterPage, Dashboard, ProfilePage и т.д.

function App() {
  const [token, setToken] = useState(localStorage.getItem('token') || '');

  const handleLogin = (newToken) => {
    setToken(newToken);
    localStorage.setItem('token', newToken);
  };

  if (!token) {
    return <LoginPage onLogin={handleLogin} />;
  }

  return (
    <div>
      <h1>Добро пожаловать на FC25 турниры!</h1>
      {/* Здесь можно разместить навигацию, Dashboard, и другие компоненты */}
    </div>
  );
}

export default App;
